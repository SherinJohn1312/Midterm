<%- include ('../partials/header') %>

<div class="container my-5">
  <header>
    <h1>New Reservation</h1>
  </header>
  <hr>
</div>

  <div>

    <form action = "/reservations", method="POST">
    <div class="form-group">
      <label for="roomType">Room Type</label>
      <select name = "roomtype" class ="form-control">
      <option value ="Single bed">Single Bed</option>
      <option value ="Double bed">Double Bed</option>
      <option value ="Queen">Queen</option>
      <option value ="King">King</option>
      </select>

      <input type="text" name="roomtype"  class="form-control">
    </div>
  
    <div class="form-row">
      <div class="col">
        <div class="form-group">
          <label for="checkIn">Check In</label>
          <input type="date" name="checkIn" class="form-control" value="<%= formData.checkIn %>">
        </div>
      </div>
  
      <div class="col">
        <div class="form-group">
          <label for="checkOut">Check Out</label>
          <input type="date" name="checkOut" class="form-control" value="<%= formData.checkOut %>">
        </div>
      </div>
    </div>
  
    <div class="form-group">
      <label for="numOfOccupants">Number of Occupants</label>
      <input type="number" name="numOfOccupants" class="form-control" value="<%= formData.numOfOccupants %>" min="1" step="1"/>
    </div>
  
    <div class="form-group">
      <button class="btn btn-dark">Submit</button>
    </div>
  </form>
  </div>


<%- include ('../partials/footer') %>